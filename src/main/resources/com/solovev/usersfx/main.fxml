   <children>
      <ComboBox fx:id="comboBoxUsers" layoutX="12.0" layoutY="14.0" prefHeight="25.0" prefWidth="270.0" promptText="Imported Users" />
      <ListView fx:id="addedUsersListView" layoutX="15.0" layoutY="322.0" prefHeight="210.0" prefWidth="270.0" />
